def framework_pods
  pod 'Socket.IO-Client-Swift'
  pod 'Feathers'
  pod 'Result'
end

target 'FeathersSwiftSocketIO-iOS' do
  use_frameworks!
  platform :ios, '9.0'
  framework_pods

end

target 'FeathersSwiftSocketIO-macOS' do
  use_frameworks!
  platform :osx, '10.10'
  framework_pods
end

target 'FeathersSwiftSocketIO-tvOS' do
  use_frameworks!
  platform :tvos, '9.0'
  framework_pods
end
